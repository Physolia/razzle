{
    "name": "razzle",
    "description": "Create server-rendered universal JavaScript applications with no configuration",
    "license": "MIT",
    "author": "Jared Palmer <jared@palmer.net>",
    "repository": {
        "type": "git",
        "url": "https://github.com:jaredpalmer/razzle.git",
        "directory": "packages/razzle"
    },
    "version": "5.0.0-alpha.0",
    "bin": {
        "razzle": "./bin/razzle.js"
    },
    "scripts": {
        "prettier": "prettier --check src/",
        "prettier:fix": "prettier --write src/",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "yarn lint --fix",
        "verify": "run-p prettier lint",
        "verify:fix": "yarn prettier:fix && yarn lint:fix",
        "build": "esbuild src/index.ts --define:process.env.NODE_ENV=\\\"production\\\" --bundle --platform=node --outfile=lib/index.js",
        "postbuild": "tsc --build"
    },
    "keywords": [
        "inferno",
        "isomorphic",
        "preact",
        "razzle",
        "react",
        "reason",
        "reasonml",
        "ssr",
        "universal",
        "webpack"
    ],
    "dependencies": {
        "chalk": "^4.1.2",
        "dotenv": "^10.0.0",
        "dotenv-expand": "^5.1.0",
        "fs-extra": "^10.0.0",
        "yargs": "^17.2.1"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13"
    }
}